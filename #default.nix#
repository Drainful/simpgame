with import <nixpkgs> {};
{
    simpgame = stdenv.mkDerivation rec {
        name = "simpgame";
        buildInputs = [
                        sbcl
                        ncurses
                        libGL
                        xorg.libX11
                        xorg.libXrandr
                        xorg.libXinerama
                        xorg.libXxf86vm
                        xorg.libXcursor
                        ];
        LD_LIBRARY_PATH = "/run/opengl-driver/lib:/run/opengl-driver-32/lib" + pkgs.stdenv.lib.makeLibraryPath buildInputs;
    };
}
